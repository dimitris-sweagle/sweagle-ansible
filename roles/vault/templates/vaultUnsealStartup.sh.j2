#!/bin/sh
export VAULT_ADDR=http://{{ inventory_hostname }}:{{ vault_port | default(8200) }}

nohup {{ vault_install_dir }}/vault server -config={{ vault_conf_dir }}/vaultconfig.hcl > /dev/null 2>&1 &

sleep 5

{{ vault_install_dir }}/vault unseal {{ vault_key1 }}
{{ vault_install_dir }}/vault unseal {{ vault_key2 }}
{{ vault_install_dir }}/vault unseal {{ vault_key3 }}
